<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    app:cardBackgroundColor="@color/main_num_color"
    app:cardCornerRadius="20dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false"
    app:contentPadding="10dp"


    >

    <com.zhy.autolayout.AutoLinearLayout

        android:id="@+id/widget_delete_dialog_linear"
        android:layout_width="500px"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"

        android:orientation="vertical">


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/main_num_color"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_delete_title"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="24px"
                android:gravity="center_vertical"
                android:textColor="@color/common_white"
                android:textSize="36px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/delete_distory"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/common_white"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/dialog_delete_distory"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="24px"
                android:gravity="center_vertical"
                android:textColor="@color/button_grey_666666"
                android:textSize="26px" />

        </com.zhy.autolayout.AutoLinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/main_num_color" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="@color/common_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/black_333333" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/common_line_bg" />


            <TextView
                android:id="@+id/sure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/main_num_color" />

        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>
</android.support.v7.widget.CardView>