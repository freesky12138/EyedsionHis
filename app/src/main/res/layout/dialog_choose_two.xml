<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="500px"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/common_white"
    app:cardCornerRadius="12px"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false"
    >

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black_313131"
            android:textStyle="bold"
            android:gravity="center"
            android:text="温馨提示"
            android:textSize="32px" />


        <TextView
            android:id="@+id/dialog_desc"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black_313131"
            android:gravity="center"
            android:text="您确定？"
            android:textSize="26px" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_line_bg" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="72px"
            android:background="@color/common_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/black_333333" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/common_line_bg" />


            <TextView
                android:id="@+id/dialog_sure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/main_num_color" />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>



</android.support.v7.widget.CardView>