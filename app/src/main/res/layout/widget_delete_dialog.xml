<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/widget_delete_dialog_linear"
    android:layout_width="592px"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/feed_back_popu_window_bg"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/main_num_color"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/dialog_delete_title"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:layout_marginLeft="24px"
            android:textColor="@color/common_white"
            android:textSize="36px"
            />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/delete_distory"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/common_white"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/dialog_delete_distory"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:layout_marginLeft="24px"
            android:textColor="@color/button_grey_666666"
            android:textSize="26px"
            />

    </com.zhy.autolayout.AutoLinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_num_color"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/common_white"
        android:layout_height="80px"
        >

        <TextView
            android:id="@+id/clear"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black_333333"
            android:text="取消"
            />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/common_line_bg"
            />


        <TextView
            android:id="@+id/sure"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/main_num_color"
            android:text="确定"
            />

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>