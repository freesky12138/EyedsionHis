<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_choose_value_layout"
    android:layout_width="match_parent"
    android:layout_height="580px"
    android:background="@color/common_white"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px">

        <TextView
            android:id="@+id/choose_value_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black_313131"
            android:textSize="28px" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_line_bg"></View>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="640px"
            android:layout_height="400px"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list1"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/common_line_bg"></View>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/list2"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="160px"
            android:background="@color/common_line_bg"></View>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="240px"
            android:background="@color/common_line_bg"></View>


        <TextView
            android:id="@+id/info_set_danwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:paddingTop="12px"

            android:layout_marginLeft="460px"
            android:textColor="@color/main_num_color"
            android:textSize="20px" />

    </com.zhy.autolayout.AutoRelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_line_bg"></View>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/sure_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/common_white"
        >

        <TextView
            android:id="@+id/sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_centerInParent="true"
            android:text="确定"
            android:textColor="@color/main_num_color" />

    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoLinearLayout>
