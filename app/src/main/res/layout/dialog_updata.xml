<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_delete_dialog_linear"
    android:layout_width="540px"
    android:layout_height="542px"
    android:fitsSystemWindows="true"
    android:background="@drawable/find_new_version"
    android:orientation="vertical">

    <TextView
        android:id="@+id/update_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发现新版本"
        android:textSize="32px"
        android:textColor="@color/black_313131"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110px"
        />
    <ImageView
        android:id="@+id/update_delete"
        android:layout_width="48px"
        android:layout_height="48px"
        android:background="@drawable/new_version_delete"
        android:layout_alignParentRight="true"
        android:layout_marginTop="52px"
        android:layout_marginRight="52px"
        />

    <TextView
        android:id="@+id/update_version_no"
        android:layout_below="@+id/update_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="36px"
        android:textSize="24px"
        android:textColor="@color/button_grey_666666"
        android:layout_marginLeft="52px"
        />

    <TextView
        android:id="@+id/update_version_size"
        android:layout_below="@+id/update_version_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="24px"
        android:textColor="@color/button_grey_666666"
        android:layout_marginLeft="52px"
        />
    <ScrollView
        android:id="@+id/update_value_scroll"
        android:layout_below="@+id/update_version_size"
        android:layout_width="wrap_content"
        android:layout_height="114px"
        android:layout_marginTop="36px"
        android:layout_marginLeft="52px"
        android:layout_marginRight="52px"
        >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/update_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:textColor="@color/button_grey_666666"
                />

        </com.zhy.autolayout.AutoLinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/update_now"
        android:layout_width="200px"
        android:layout_height="60px"
        android:layout_below="@id/update_value_scroll"
        android:layout_marginTop="36px"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="立即更新"
        android:textSize="24px"
        android:textColor="@color/common_white"
        android:background="@drawable/widget_updata_dialog_bg"
        />

</com.zhy.autolayout.AutoRelativeLayout>