<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="500px"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/common_white"
    app:cardCornerRadius="12px"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false">
    <!-- android:background="@drawable/feed_back_popu_window_bg"-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/choose_only_text"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black_313131"
            android:textStyle="bold"
            android:gravity="center"
            android:text="温馨提示"
            android:textSize="32px" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/black_313131"
            >
        </View>

        <ListView
            android:id="@+id/choose_only_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

    </com.zhy.autolayout.AutoLinearLayout>




</android.support.v7.widget.CardView>